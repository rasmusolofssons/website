@inherits UmbracoViewPage<Rasolo.Core.Features.BlogsPage.BlogsPage>

@if (Model.ShowBlogPages)
{
	<div class="posts-container">
		<h2>Latest posts</h2>
		<div class="posts-container__posts">
			@{
				foreach (var blogPage in Model.BlogPages)
				{
					@Html.Partial("BlogsTeaser", blogPage)
				}
			}
		</div>
		<div class="spacer"></div>
	</div>
}