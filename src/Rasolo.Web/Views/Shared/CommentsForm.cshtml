@model int

<form class="comment-form" action='@Url.Action("SubmitComment","Comments")' method="POST">
	<div>
		<input type="text" name="name" id="name" required>
	</div>
	<div>
		<input type="text" name="message" id="message" required>
	</div>
	<input type="hidden" id="contentid" name="contentid" value=@Model>
	<div>
		<input type="submit" value="Post">
		@Html.AntiForgeryToken()
	</div>
</form>
